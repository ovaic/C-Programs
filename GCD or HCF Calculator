#include <stdio.h>
#include <stdlib.h>
#include <math.h>

///GCD/HCF Calculator
///Finding the GCD/HCF of two integers

#include <stdio.h>
int hcf(int n1, int n2);
int main()
{
    int n1, n2;
    printf("Enter two integers: ");
    scanf("%d %d", &n1, &n2);
    /// if user enters negative number, sign of the number is changed to positive
    n1 = ( n1 > 0) ? n1 : -n1;
    n2 = ( n2 > 0) ? n2 : -n2;
    printf("%d\n",n1);
    printf("%d\n",n2);

    printf("G.C.D of %d and %d is %d.", n1, n2, hcf(n1,n2));
    return 0;
}

int hcf(int n1, int n2)
{
    if (n2 != 0)
       return hcf(n2, n1%n2);
    else
       return n1;
}
