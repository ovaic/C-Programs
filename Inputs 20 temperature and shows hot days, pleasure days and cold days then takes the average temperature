#include <stdio.h>

#include <stdlib.h>



///Inputs 20 temperature and shows hot days, pleasure days and cold days then takes the average temperature



int main()

{

    int hd=0, pd=0, cd=0, inp=0, count=1,avg=0, temp=0;



     while (count<=20)

    {

        printf("\aEnter the temperature: \n");

        scanf("%d",&inp);



        temp=temp+inp;



    if(inp>=85)

    {

        hd=hd+1;

    }

    else if(inp>=60)

    {

        pd=pd+1;

    }

    else if(inp<60)

    {

        cd=cd+1;

    } avg=temp/20;

    count=count+1;



    }

    printf("\nHot days: %d\n",hd);

    printf("\nPleasure days: %d\n",pd);

    printf("\nCold days: %d\n",cd);



    avg=temp/20;

    printf("\nAverage Temperature: %d\n",avg);



    return 0;

}
